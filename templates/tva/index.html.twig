{% extends 'base.html.twig' %}

{% block title %}Tva index{% endblock %}

{% block body %}
    <h1>Tva index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Taux</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tva in tvas %}
            <tr>
                <td>{{ tva.id }}</td>
                <td>{{ tva.nom }}</td>
                <td>{{ tva.taux }}</td>
                <td>
                    <a href="{{ path('tva_show', {'id': tva.id}) }}">Voir</a>
                    <a href="{{ path('tva_edit', {'id': tva.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tva_new') }}">Retour a la liste</a>
{% endblock %}
