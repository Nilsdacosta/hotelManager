{% extends 'base.html.twig' %}

{% block title %}Tva{% endblock %}

{% block body %}

    {# Page affichage TVA, individuelle #}
    <div class='d-flex justify-content-center  my-5'>
         <h1>Détail de la TVA : {{ tva.nom }}</h1>
    </div>

    <br>
    
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tva.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tva.nom }}</td>
            </tr>
            <tr>
                <th>Taux</th>
                <td>{{ tva.taux }}</td>
            </tr>
        </tbody>
    </table>

    {# Bouton: retour à la liste #}
    <a href="{{ path('tva_index') }}"><i class="fas fa-arrow-left fa-3x " style="color:black;"></i></a>

    {# Bouton: Modifier #}
    <a href="{{ path('tva_edit', {'id': tva.id}) }}"><i class="far fa-edit fa-3x"></i></a>

    {# Formulaire suppression #}
    {{ include('tva/_delete_form.html.twig') }}
{% endblock %}
