{% extends 'base.html.twig' %}

{% block title %}Employé{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center my-5">
        <h1>Details de l'employé "{{ employe.prenom }} {{ employe.nom }}"</h1>
    </div>

    <table class="table table-striped table-hover" >
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ employe.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ employe.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ employe.telephone }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ employe.poste }}</td>
            </tr>
        </tbody>
    </table>

<div class="row">
    {# <a href="{{ path('employe_edit', {'id': employe.id}) }}"><i class="far fa-edit fa-3x"></i></a> #}
    <a href="{{ path('employe_index') }}"><i class="fas fa-arrow-left fa-3x " style="color:black;"></i></a>
    {{ include('employe/_delete_form.html.twig') }}

</div>
{% endblock %}
