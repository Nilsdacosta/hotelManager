                  <td> {{resaDuJour.client.nom}}</td>
                  <td>{{resaDuJour.dateEntree|date('d/m/Y')}}</td>
                  <td>{{resaDuJour.dateSortie|date('d/m/Y')}}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
