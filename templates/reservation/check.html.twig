          <tbody>
              {% for reservation in reservationDuJour %}
              <tr>
                  <td>{{reservation.id}}</td>
                  <td> {{reservation.client.nom}}</td>
                  <td> {% for chambre in reservation.chambre %} {{chambre.nom}} {% endfor %}</td>
                  <td>{{reservation.client.prenom}}</td>
                  <td>{{reservation.renderStatus}}</td>
                  <td class="d-flex justify-content-center"><a class="btn btn-secondary" href="{{path('reservationCheckInForm',{'id':reservation.id} ) }}">Valider</a></td>

              </tr>
              {% endfor %}
          </tbody>
      </table>
        </div>
    </div>
      
