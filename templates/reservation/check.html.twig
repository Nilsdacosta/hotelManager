{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}


{% block body %}


  
    <div class="container-fluid my-5">
    <div class="row">
        <div class="col-6">
            <table class ="table table-striped">
          <thead class="thead-dark">
              <tr>
                  <th>N° ID</th>
                  <th>Nom du client</th>
                  <th>Prénom du client</th>
