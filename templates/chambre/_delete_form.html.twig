{# Formulaire de suppression #}
<form method="post" action="{{ path('chambre_delete', {'id': chambre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chambre.id) }}">

    {# Bouton: suppression #}
    <div class="d-flex flex-row-reverse">
        <button class="btn "><i class="far fa-trash-alt fa-3x"></i></button>
    </div>
</form>
