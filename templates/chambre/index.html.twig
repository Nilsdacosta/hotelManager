{% extends 'base.html.twig' %}

{% block title %}Liste des Chambres{% endblock %}

{% block body %}
    <h1>Liste des Chambres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Capacite</th>
                <th>Etat</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.capacite }}</td>
                <td>{{ chambre.etat }}</td>
                <td>{{ chambre.description }}</td>
                <td>{{ chambre.prix }}</td>
                <td>{{ chambre.nom }}</td>
                <td>
                    <a href="{{ path('chambre_show', {'id': chambre.id}) }}">Voir</a>
                    <a href="{{ path('chambre_edit', {'id': chambre.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de r√©sultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chambre_new') }}">Ajouter</a>
{% endblock %}
