{% extends 'base.html.twig' %}

{% block title %}Liste des Chambres{% endblock %}

{% block body %}
    <h1>Liste des Chambres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Capacite</th>
                <th>Etat</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.capacite }}</td>
                <td>{{ chambre.etat }}</td>
                <td>{{ chambre.description }}</td>
                <td>{{ chambre.prix }}</td>
                <td>{{ chambre.nom }}</td>
                <td>
                    <a href="{{ path('chambre_show', {'id': chambre.id}) }}"><i class="far fa-eye"></i></a>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a href="{{ path('chambre_edit', {'id': chambre.id}) }}"><i class="far fa-edit"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de r√©sultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('chambre_new') }}"><i class="far fa-plus-square fa-3x"></i></a>
    {% endif %}
{% endblock %}
