{% extends 'base.html.twig' %}

{% block title %}Chambre{% endblock %}

{% block body %}
  <div class='d-flex justify-content-center'>
         <h1>Detail chambre {{ chambre.id }} </h1>
    </div>
    <br>
        <table class="table table-striped table-hover" >
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Capacit√©</th>
                <td>{{ chambre.capacite }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ chambre.etat }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ chambre.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
